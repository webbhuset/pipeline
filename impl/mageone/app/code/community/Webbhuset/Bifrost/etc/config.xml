<config>
    <modules>
        <Webbhuset_Bifrost>
            <version>1.0.0</version>
        </Webbhuset_Bifrost>
    </modules>
    <global>
        <helpers>
            <whbifrost>
                <class>Webbhuset_Bifrost_Helper</class>
            </whbifrost>
        </helpers>
        <blocks>
            <whbifrost>
                <class>Webbhuset_Bifrost_Block</class>
            </whbifrost>
        </blocks>
        <models>
            <whbifrost>
                <class>Webbhuset_Bifrost_Model</class>
                <resourceModel>whbifrost_resource</resourceModel>
            </whbifrost>
            <whbifrost_resource>
                <class>Webbhuset_Bifrost_Model_Resource</class>
                <entities>
                    <log>
                        <table>whbifrost_log</table>
                    </log>
                    <log_message>
                        <table>whbifrost_log_message</table>
                    </log_message>
                </entities>
            </whbifrost_resource>
        </models>
        <resources>
            <whbifrost_setup>
                <setup>
                    <module>Webbhuset_Bifrost</module>
                    <class>Webbhuset_Bifrost_Model_Resource_Setup</class>
                </setup>
            </whbifrost_setup>
        </resources>
        <webbhuset>
            <whpeasant>
                <jobs>
                    <whbifrost_job>
                        <priority>200</priority>
                        <class>whbifrost/peasant</class>
                        <on_duplicate>wait</on_duplicate>
                        <global_unique>0</global_unique>
                        <can_use_progress>1</can_use_progress>
                    </whbifrost_job>
                </jobs>
            </whpeasant>
        </webbhuset>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Webbhuset_Bifrost before="Mage_Adminhtml">Webbhuset_Bifrost_Adminhtml</Webbhuset_Bifrost>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <whbifrost>
                    <file>webbhuset/bifrost.xml</file>
                </whbifrost>
            </updates>
        </layout>
    </adminhtml>
</config>
